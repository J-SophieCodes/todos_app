<section id="todos">
  <header>
    <h2>Editing '<%= @todo_list[:name] %>'</h2>
    <ul>
      <li>
        <form action="/lists/<%= @index %>/destroy" method="post" class="delete">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @index %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="<%= @list_name || @todo_list[:name] %>" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @index %>">Cancel</a>
  </fieldset>
</form>